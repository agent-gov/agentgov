{
  "name": "agentgov",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "AgentGov â€” Provider-agnostic AI agent governance platform",
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm --filter @agentgov/scanner vitest run --coverage",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "lint:fix": "eslint --fix 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "format": "prettier --write 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' '*.json' '*.js'",
    "format:check": "prettier --check 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "security": "pnpm audit --audit-level=high",
    "check": "pnpm security && pnpm lint && pnpm format:check && pnpm test && pnpm build",
    "dev": "pnpm --filter @agentgov/cli dev",
    "audit-local": "pnpm --filter @agentgov/cli exec agentgov audit",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "ai",
    "agent",
    "governance",
    "audit",
    "langchain",
    "crewai",
    "observability"
  ],
  "author": "AgentGov",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/agent-gov/agentgov"
  },
  "homepage": "https://agent-gov.com",
  "bugs": {
    "url": "https://github.com/agent-gov/agentgov/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "simple-git-hooks": "^2.13.1",
    "typescript-eslint": "^8.55.0"
  }
}
